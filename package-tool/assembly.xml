<?xml version='1.0' encoding='UTF-8'?>
<assembly><!---->
    <id>demo</id>
    <formats>
        <!--打包的文件格式,也可以有：war zip-->
        <format>tar.gz</format>
    </formats>
    <!--tar.gz压缩包下是否生成和项目名相同的根目录-->
    <includeBaseDirectory>true</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <!--是否把本项目添加到依赖文件夹下-->
            <useProjectArtifact>false</useProjectArtifact>
            <!--指定当前打包内容所存放在的目录名-->
            <outputDirectory>lib/comm</outputDirectory>
            <!--将scope设置为runtime的依赖包打包-->
            <scope>runtime</scope>
            <!--打包是是否解压压所有的包-->
            <unpack>false</unpack>
            <excludes>
                <exclude>com.example:nacos-consumer</exclude>
                <exclude>com.example:nacos-server</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>../nacos-consumer/target</directory>
            <outputDirectory>lib/jar</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../nacos-consumer/src/main/bin</directory>
            <outputDirectory>bin/nacos-consumer</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <!--nacos-server模块的jar和bin-->
        <fileSet>
            <directory>../nacos-server/target</directory>
            <outputDirectory>lib/jar</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../nacos-server/src/main/bin</directory>
            <outputDirectory>bin/nacos-server</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
    </fileSets>
</assembly>